{
  "name": "Screenshot Notifier",
  "version": "1.0",
  "description": "Detects screenshots and notifies other users in the conversation",
  "permissions": ["activeTab", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
